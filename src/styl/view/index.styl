body
  background-color $grey-white

div.page-wrapper
  height      auto
  min-height  100%

div.header-wrapper, div.footer-wrapper
  min-width $content-width

div.content-wrapper
  display         table
  margin          0 auto
  padding-bottom  $footer-height + 50px
  padding-top     $header-height
  width           $content-width

div.content
  margin-top  30px
  padding     0 20px

table.header
  background-color  $grey-dark
  color             white
  height            $header-height
  position          fixed
  white-space       nowrap
  width             100%
  mix-user-select(none)

  i.icon
    height      $footer-height
    line-height $header-height

  a.anchor
    height $header-height

  span.anchor-title
    line-height $header-height

table.footer
  background-color  $grey-dark
  clear             both
  color             white
  height            $footer-height
  margin-top        -1 * $footer-height
  position          relative
  white-space       nowrap
  width             100%

  i.icon
    height        $footer-height
    line-height   $footer-height

  a.anchor
    height $footer-height

  span.anchor-title
    line-height   $footer-height
    margin-right  5px

i.icon
  font-size       26px
  vertical-align  middle

a.anchor
  display         inline-block
  color           $grey-white
  padding         0 10px
  vertical-align  middle

  &:hover
    color             $white
    background-color  $grey

td.title-cell
  font-size 0

span.bubble
  mix-border-radius($border-radius)
  margin        0 5px
  padding       1px 6px
  color         white
  font-size     12px
  height        18px
  line-height   18px
  text-align    center
  background-color  $solarized-2
